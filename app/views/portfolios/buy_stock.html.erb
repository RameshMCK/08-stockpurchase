<h2 class="display-4">Buy stock in <%= @portfolio.name %> Portfolio </h2>

<div class ="row align-items-end">
    <div class ="col">
        <%= form_with(url: new_cabin_path(@portfolio) , local: true, method: 'post') do |form|%>
            <div class="form-group">
                <%= form.label :company %>
                <%= form.text_field :company, id: :company, class: "form-control" %>
            </div>
            <div class="form-group">
                <%= form.label :quantity %>
                <%= form.text_field :quantity, id: :quantity, class: "form-control" %>
            </div>
            <div class="form-group">
                <%= form.submit 'Buy Stock', class: "btn btn-succcess" %>
            </div>
        <% end %>
    </div>
    <div class ="col"></div>
    <div class ="col"> </div>
    
</div>