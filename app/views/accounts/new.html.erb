<h1 class="display-4">New Account</h1>

<div class="row">
    <div class="col-4">
        <%= form_with(model: @account, local: true) do |form| %>
          <% if @account.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@account.errors.count, "error") %> prohibited this movie from being saved:</h2>
        
              <ul>
              <% @account.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>
        
            <div class="form-group">
            <%= form.label :name %>
            <%= form.text_field :name, id: :account_name, class: 'form-control' %>
            </div>
        
            <div class="form-group">
                <%= form.label :balance %>
                <%= form.text_field :balance, id: :account_balance, class: 'form-control' %>
            </div>
        
            <div class="form-group">
            <%= form.submit class: 'btn btn-outline-primary' %>
            </div>
        <% end %>
        
    </div>
    <div class="col-8"></div>
</div>